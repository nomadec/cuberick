{
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "none",
	"printWidth": 100,
	"semi": false,
	"arrowParens": "always",
	"jsxSingleQuote": false,
	"useTabs": true,
	"experimentalTernaries": true,
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"\/screens\/",
		"\/components\/",
		"\/shared\/",
		"\/assets\/",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
	"tailwindFunctions": ["clsx"],
	"endOfLine": "lf"
}
